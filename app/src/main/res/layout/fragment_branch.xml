<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BranchFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/studyImage"
        android:layout_width="101dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sh" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <EditText
        android:id="@+id/searchView"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_text"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="5dp"
        android:hint="Search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@color/mainText" />

    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gothammedium"
        android:text="@string/courses"
        android:textColor="#3B82F6"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coursesTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="440dp"
            android:layout_height="340dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#8BE4DA"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="@string/cse"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/it"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:layout_below="@+id/cse"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#3B82F6"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center_horizontal"
                    android:text="@string/it"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/uc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:layout_below="@+id/it"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#D39494"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="@string/uc"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ece"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:layout_below="@+id/it"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFBD8D"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="ECE"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/eee"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:layout_below="@+id/cse"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#D8B3FE"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="EEE"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/mech"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#989cff"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="MEE"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />

            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/instagram"
            android:scaleType="fitXY"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/github"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/twitter"
            android:scaleType="fitXY"
            android:src="@drawable/github" />
    </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>