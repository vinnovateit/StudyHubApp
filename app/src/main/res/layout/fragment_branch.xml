<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BranchFragment">

    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/studyImage"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/studhub" />

        <TextView
            android:id="@+id/coursesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyImage"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/gothammedium"
            android:text="@string/courses"
            android:textColor="@color/teal_200"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursesTextView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cse"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                app:cardBackgroundColor="#8BE4DA"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#2E97AA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="@string/cse"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/it"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_below="@+id/cse"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#3B82F6"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="@string/it"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/uc"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_below="@+id/it"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#D39494"
                app:cardCornerRadius="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#FFB17B" />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/gothammedium"
                    android:gravity="center"
                    android:text="@string/uc"
                    android:textColor="@color/mainText"
                    android:textSize="40sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/instagram" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/instagram"
                android:scaleType="fitXY"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/twitter"
                android:scaleType="fitXY"
                android:src="@drawable/github" />
        </RelativeLayout>

    </RelativeLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        app:queryHint="Search"
        app:iconifiedByDefault="false"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
        android:visibility="gone"/>

</RelativeLayout>